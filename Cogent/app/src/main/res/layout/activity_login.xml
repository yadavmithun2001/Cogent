<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginEnd="-40dp"
        android:layout_marginTop="-20dp"
        app:srcCompat="@drawable/img_3" />

    <TextView
        android:id="@+id/india"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:fontFamily="@font/roboto_slab_bold"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:text="Sign up and Get Rs10 Bonus Cash"
        android:textColor="#1A1C2B"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Using Mobile Number"
        android:textColor="#1A1C2B"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_edit"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+91"
            android:textColor="#1A1C2B"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            android:gravity="center"
            tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Enter Mobile Number"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:textColorHint="#3B3B3B"
            android:backgroundTint="@color/white"
            tools:ignore="HardcodedText,TextFields" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#F50057"
        app:cardCornerRadius="6dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Get OTP and Login"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Extra Rs 50 Bonus Cash with Friend's Referral Code"
        android:textColor="#1A1C2B"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        tools:ignore="HardcodedText" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_edit"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="Enter Referral Code"
            android:layout_weight="1"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:textColorHint="#3B3B3B"
            android:backgroundTint="@color/white"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="APPLY"
            android:textColor="#FF7FAC"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:gravity="center"/>
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:rotation="180"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/img_3" />

</LinearLayout>