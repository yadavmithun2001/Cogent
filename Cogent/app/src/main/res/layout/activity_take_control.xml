<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040040"
    tools:context=".TakeControl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TAKE"
            android:gravity="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:textColor="#F50057"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTROL"
            android:gravity="center"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_marginTop="-15dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="At MPL, we are committed to helping you stay in control of your gaming"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15sp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/viratkohli"
            android:layout_marginTop="-100dp"
            android:layout_marginBottom="50dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:textColor="@color/black"
                android:text="Tools to help you game smartly" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                app:cardCornerRadius="7dp"
                android:layout_marginTop="20sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/black"
                        android:text="Set Deposit Limits"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/black"
                        android:text="Control the amount of money you deposit on MPL by setting monthly and daily limits."/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20sp"
                        android:backgroundTint="#F50057"
                        app:cardCornerRadius="5dp"
                        android:elevation="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/next"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="25dp"
                            android:paddingEnd="25sp"
                            android:textSize="20sp"
                            android:text="Set Limit"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                app:cardCornerRadius="7dp"
                android:layout_marginTop="20sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/black"
                        android:text="Set Game Lock"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/black"
                        android:text="Control the amount of money you deposit on MPL by setting monthly and daily limits."/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20sp"
                        android:backgroundTint="#F50057"
                        app:cardCornerRadius="5dp"
                        android:elevation="10dp"
                        android:layout_height="wrap_content">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="25dp"
                            android:paddingEnd="25sp"
                            android:textSize="20sp"
                            android:text="Set Lock"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="7dp"
                android:layout_marginTop="20sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/black"
                        android:text="Set control Test"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/black"
                        android:text="Control the amount of money you deposit on MPL by setting monthly and daily limits."/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20sp"
                        android:backgroundTint="#F50057"
                        app:cardCornerRadius="5dp"
                        android:elevation="10dp"
                        android:layout_height="wrap_content">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="25dp"
                            android:paddingEnd="25sp"
                            android:textSize="20sp"
                            android:text="Take Test"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>



</ScrollView>