<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fairplaypolicy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:background="#FFF3F3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/img" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:text="Your game plays are always protected!"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:textSize="17sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColor="@color/black"
        android:text="What is Cheating?"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hacking in any form, including misusing bugs or using third party tools"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hacking in any form, including misusing bugs or using third party tools"
        android:textColor="@color/black"
        android:paddingStart="20dp"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColor="@color/black"
        android:text="How does MPL punish cheating?"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColor="@color/black"
        android:text="1st Offence - Banned for 1 day"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColor="@color/black"
        android:text="2nd Offence - Banned for 7 days"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColor="@color/black"
        android:text="3rd Offence - Banned from MPL Permanently"/>

</LinearLayout>